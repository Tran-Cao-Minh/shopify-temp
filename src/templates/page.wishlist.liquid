{% assign class_grid = 'col-lg-3 col-6' %}
<div class="page_wishlist">
  <div class="container">
    {% unless customer %}
      <h3 class="text-center">{{ "general.pages.logged_in_to_perform_this_feature" | t }}</h3>
    {% endunless %}

    {% if customer %}
    <div class="section-header">
      <h1>{{ page.title }}</h1>
      <div class="nav">
        <a href="{{ pages['my-wishlist'].url }}" class="active link-readmore text-underline">{{ "general.pages.view_wishlist" | t }}</a>
        <a href="{{ pages['my-favorite'].url }}" class="link-readmore text-underline">{{ "general.pages.view_favorite" | t }}</a>
      </div>
    </div>

    <div data-scope="page_wishlist">
      <div class="loader" style="margin: 100px auto;" data-container="loader"></div>
      <div class="text-center page__no-item hide" data-container="empty">
        <div class="media media__no-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="144.086" height="122.474" viewBox="0 0 144.086 122.474">
            <g data-name="Group 2372" transform="translate(-472.311 61.703)">
