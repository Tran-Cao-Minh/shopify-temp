<section class="shop__our--socials">
  <div class="swiper-wrapper">
    {% for block in section.blocks%}
      {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      <div class="swiper-slide">
        <div class="item">
          {% if block.settings.image != blank %}
            <!-- <img src="{{ block.settings.image | img_url: 'master' }}"/> -->
            <img class="image__lazyload lazyload lazypreload" src="{{ block.settings.image | img_url: '300x300' }}" data-src="{{ img_url }}" data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]" data-aspectratio="1.0" data-sizes="auto" alt=""/>
          {% else %}
            <img alt="" class="placeholder" src="http://via.placeholder.com/360x360">
          {% endif %}
          <div class="content">
            {% if block.settings.title != blank %}
              <h3 class="title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.sub_title %}
              <p class="sub_title">{{ block.settings.sub_title }}</p>
            {% endif %}
          </div>
          {% if block.settings.link != blank %}
            <a class="link" target="_blank" href="{{ block.settings.link }}"></a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</section>

