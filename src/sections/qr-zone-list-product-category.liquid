            {% for product in collections[section.settings.collection_three].products limit: collections[section.settings.collection_three].all_products_count %}
              {% if section.settings.product != blank %}
              {% assign product = all_products[section.settings.product] %}    
              {% else %}
                {% assign product = all_products[section.settings.product_select] %}
              {% endif %}
              {% if product %}
                {% assign product_status = false %}
                {% assign product_tags = product.tags | downcase %}
                {% capture product_json %}{% include 'product-json' %}{% endcapture %}
                {% if product_status %}
                  {% assign compare_at_price = current_variant.compare_at_price %}
                  {% assign price                = current_variant.price %}
                  {% assign compare_member_price = current_variant.metafields.ulife.compare_member_price %}
                  {% assign member_price         = current_variant.metafields.ulife.member_price %}

                  <!-- add class hidden item > 4-->
                  {% assign list_hidden_class         = "" %}
                  {% if forloop.index > 4 %}
                    {% assign list_hidden_class = "hidden" %}
                  {% endif %}

                  <div class="product-category__item product-item-list--three {{list_hidden_class}}">
                    <div class="row">
                      <div class="col-md-6 display-center">
                        <div class="product-category__item__content">
                          <div class="product-category__item__content__img">
                            {% if block.settings.img-product %}
                              <img src="{{ block.settings.img-product | img_url: 'master' }}" alt="">
                            {% else %}
                              {% if product.featured_image %}
                                <img src="{{ product.featured_image | img_url: 'master' }}" alt="" data-promotion_image/>
                              {% else %}
                                <img src="{{ 'default_product.png' | asset_img_url: 'master' }}" alt="" data-promotion_image/>
                              {% endif %}
                            {% endif %}
                          </div>
                          <div class="product-category__item__content__information">
                            <h4 class="product-category__item__content__information__title">{{ product.title }}</h4>
                            <div class="product-category__item__content__information__description">
                              <span class="product-category__item__content__information__description--short">20g</span>
                              <span class="product-category__item__content__information__description--short">20g</span>
                              <span class="product-category__item__content__information__description--short">20g</span>
                              <span class="product-category__item__content__information__description--short">20g</span>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-1 display-center">
                        <div class="product-category__item__member-price">
                          <span class="price-sale">{{ compare_member_price | times: 100 | money | remove: '.00' }}</span>
                          <span class="price-regular">{{ member_price | times: 100 | money | remove: '.00' }}</span>
                        </div>
                      </div>
                      <div class="col-md-1 display-center">
                        <div class="product-category__item__retail-price">
                          <span class="price-sale">{{ compare_at_price | money | remove: '.00' }}</span>
                          <span class="price-regular">{{ price | money | remove: '.00' }}</span>
                        </div>
                      </div>
                      <div class="col-md-1 display-center">
                        <div class="product-category__item__amount">
                          <span class="amount-cv">100</span>
                          <span class="amount-qv">116</span>
                        </div>
                      </div>
                      <div class="col-md-3 display-center">
                        <a class="product-category__item__qr-code" href="{{ section.settings.link-qr}}">
                          <img src="{{ 'icon-qr-code.png' | asset_img_url: 'master' }}" alt="">
                          <h5 class="special-offers__item__qr-code__title">Create qr code</h5>
                        </a>
                      </div>
                    </div>
                  </div>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% else section.settings.collection_one = blank %}
        <div class="no-collection">Sorry, you haven't selected a collection yet</div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  // click grid and listing
  $(document).ready(function () {
    $('.product-category__list-product__listing__body').hide();
    $('.product-category__list-product__grid__body').show();
    $('.icon-grid').hide();
    $('.icon-grid-click').show();
    $('.icon-list').show();
    $('.icon-list-click').hide();
    
    $('.product-category__toolbar__display--grid img').click(function () {
      $('.product-category__list-product__listing__body').hide();
      $('.product-category__list-product__grid__body').show();
      $('.icon-grid').hide();
      $('.icon-grid-click').show();
      $('.icon-list').show();
      $('.icon-list-click').hide();
    });

    $('.product-category__toolbar__display--listing img').click(function () {
      $('.product-category__list-product__listing__body').show();
      $('.product-category__list-product__grid__body').hide();
      $('.icon-grid').show();
      $('.icon-grid-click').hide();
      $('.icon-list').hide();
      $('.icon-list-click').show();
    });
  });

  // click view-all
  $('.product-category__list-product__grid-listing__view-all--one').click(function(e) {
    e.preventDefault();
    function toggleHidden (index, product){
      if(index > 3 ){
        if($(product).hasClass('hidden')){
          $(product).removeClass('hidden');
        }else{
          $(product).addClass('hidden');
        }
      }
    }
    let productList = $('.product-item-list--one');
    let productCards = $('.product-item-card--one');
    $.each(productList, toggleHidden );
    $.each(productCards, toggleHidden );
  });

  $('.product-category__list-product__grid-listing__view-all--two').click(function(e) {
    e.preventDefault();
    function toggleHidden (index, product){
      if(index > 3 ){
        if($(product).hasClass('hidden')){
          $(product).removeClass('hidden');
