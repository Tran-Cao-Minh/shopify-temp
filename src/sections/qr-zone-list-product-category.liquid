              {% assign collection = collections[block.settings.collection] %}
              <option value="{{ collection.id }}">{{ collection.title }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>
      <div class="product-category__toolbar__sort">
        <img src="{{ 'icon-arrange.png' | asset_img_url: 'master' }}" alt="">
      </div>
      <div class="product-category__toolbar__display">
        <div class="product-category__toolbar__display--grid">
          <img class="icon-grid" src="{{ 'icon-grid.png' | asset_img_url: 'master' }}" alt="">
          <img class="icon-grid-click" src="{{ 'icon-grid-click.png' | asset_img_url: 'master' }}" alt="">
