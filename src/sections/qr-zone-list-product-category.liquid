          $(product).addClass('hidden');
        }
      }
    }
    let productList = $('.product-item-list--two');
    let productCards = $('.product-item-card--two');
    $.each(productList, toggleHidden );
    $.each(productCards, toggleHidden );
  });

  $('.product-category__list-product__grid-listing__view-all--three').click(function(e) {
    e.preventDefault();
    function toggleHidden (index, product){
      if(index > 3 ){
        if($(product).hasClass('hidden')){
          $(product).removeClass('hidden');
        }else{
          $(product).addClass('hidden');
        }
      }
    }
    let productList = $('.product-item-list--three');
    let productCards = $('.product-item-card--three');
    $.each(productList, toggleHidden );
    $.each(productCards, toggleHidden );
  });

  // hidden placeholder
  if ($(window).width() < 900){  
    $(':input').removeAttr('placeholder');
  }   
</script>

