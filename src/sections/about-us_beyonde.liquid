<style>
    .page__about-us .section__product--beyonde{
        {% if section.settings.brand_banner != blank %}
            background-image: url("{{section.settings.brand_banner | img_url: 'master'}}");
        {% endif %} 
    }
    @media (max-width: 576px){
        .page__about-us .section__product--beyonde{
            {% if section.settings.brand_banner_mb != blank %}
                background-image: url("{{section.settings.brand_banner_mb | img_url: 'master'}}");
            {% endif %} 
        }
     }
</style>
<section class="section section__product--beyonde">
    {% if section.settings.brand_logo != blank %}
    <div class="product__logo">
        <div class="container">
            <img alt="logo" src="{{section.settings.brand_logo | img_url: 'master'}}"/>
        </div>
    </div>
    {% endif %}
    <div class="container">
        <div class="product__description index-section-bottom">
            <div class="row">
                <div class="col col-12 col-md-6">
                    <div class="product__content product__intro">
                        {% if section.settings.brand_title != blank %}
                            <h1>{{section.settings.brand_title}}</h1>
                        {% endif %}
                        {% if section.settings.brand_subtitle != blank %}
                            <div class="subtitle">{{section.settings.brand_subtitle}}</div>
                        {% endif %}
                        {% if section.settings.brand_desc != blank %}
                            {{section.settings.brand_desc}}
                        {% endif %}
                    </div>
                </div>
            </div>
            {% if section.blocks.size > 0 %}
                <div class="row">
                    {% for block in section.blocks %}
                        <div class="col col-12 col-md-6">
                            <div class="product__content">
                                <h1>{{block.settings.feature_title}}</h1>
                                {{block.settings.feature_desc}}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
            {% if section.settings.brand_action_label != blank %}
                <div class="product__view">
                    <a class="link-readmore text-underline" href="{{section.settings.brand_handle}}" target="_blank">{{section.settings.brand_action_label}}</a>
                </div>
            {% endif %}
        </div>
    </div>
</section>


{% schema %}
{
    "name": "Beyonde",
    "settings": [
        {
            "type": "text",
            "id": "brand_action_label",
            "label": "Brand link button label",
            "default": "View Beyonde products"
        },
        {
            "type": "text",
            "id": "brand_title",
            "label": "Brand title",
            "default": "Beyonde"
        },
        {
            "type": "richtext",
            "id": "brand_subtitle",
            "label": "Brand subtitle",
            "default": "<p>Health and wellness product</p>"
        },
        {
            "type": "richtext",
            "id": "brand_desc",
            "label": "Brand description",
            "default": "<p>beyonde strives to strengthen your health every day so youâ€™re ready to achieve your life goals. We believe that freedom from illness is no longer enough.</p>"
        },
        {
            "type": "image_picker",
            "id": "brand_banner",
            "label": "Brand banner"
        },
        {
            "type": "image_picker",
            "id": "brand_banner_mb",
            "label": "Brand banner mobile"
        },
        {
            "type": "image_picker",
            "id": "brand_logo",
            "label": "Brand logo"
        },
        {
            "type": "url",
            "id": "brand_handle",
            "label": "Brand URL"
        }
    ],
    "blocks": [
        {
            "type": "quote",
            "name": "Feature",
            "settings": [
                {
                    "type": "text",
                    "id": "feature_title",
                    "label": "Feature",
                    "default": "Title"
                },
                {
                    "type": "richtext",
                    "id": "feature_desc",
                    "label": "Description",
                    "default": "<p>Description</p>"
                }
            ]
        }
    ]
}
{% endschema %}
