//====== EFFECT - SLIDERHOME  ====
@keyframes myeffect-outSlider {
  0%   {
    opacity: 0;
    transform: translateY(-150px);
  }
  100%   {
    opacity: 1;
    transform: translateY(0);
  }
}
@keyframes myeffect-leftSlider {
  0%   {
    opacity: 0;
    transform: translateX(-100px);
  }
  100%   {
    opacity: 1;
    transform: translateX(0px);
  }
}
//===== Minxin UTILITIES =======
@mixin linkColor($linkColor:$gray-dark ,$linkColorHover: $primary_color){
  color: $linkColor;
  &:hover{color: $linkColorHover;}
}

@mixin line-clamp($numLines : 1, $lineHeight: 1.1) {
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: block;
  /* autoprefixer: off */
  display: -webkit-box;
  -webkit-line-clamp: $numLines;
  -webkit-box-orient: vertical;
  line-height: $lineHeight + unquote('em');
  max-height: $numLines * $lineHeight + unquote('em');
  min-height: $numLines * $lineHeight + unquote('em');
}


@mixin breakpoints($point){
  @if ($point == xl){
    @media (min-width: 1900px){ @content }
  }
  @if ($point == lg){
    @media (min-width: 1200px){ @content }
  }
  @else if ($point == md){
    @media (min-width: 992px) and (max-width: 1199px){ @content }
  }

  @else if ($point == sm){
    @media (min-width: 768px) and (max-width: 991px){ @content }
  }

  @else if ($point == xs){
    @media (max-width: 767px){ @content }
  }

  @else if ($point == xxs){
    @media (max-width: 767px) and (min-width: 321px){ @content }
  }

  @else if ($point == xxxs){
    @media  (max-width: 321px){ @content }
  }
}

