          <h5 class="title ttile-top">{{ 'general.share_popup.introduce_unilever_life_to_other' | t }}</h5>
          <h5 class="title primary_color">{{ 'general.share_popup.shop_share_and_get_unlimited_5_bonus_html' | t }}</h5>
        </div>
        <div class="share">
          <div class="social__sharing-title">{{ 'general.social.share' | t }}</div>
          <ul class="social-sharing">
            <li>
              <a target="_blank"
                href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}%3Fchannel=DTC_sharelink{% if member_id != blank %}%26promo_code={{ member_id }}{% endif %}"
                class="btn--share share-facebook"
                title="{{ 'general.social.facebook' | t }}">
                {% include 'icon-facebook' %}
              </a>
            </li>
            <li>
              <a target="_blank"
                href="http://line.me/R/msg/text/?{{ shop.url | append: share_permalink }}%3Fchannel=DTC_sharelink{% if member_id != blank %}%26promo_code={{ member_id }}{% endif %}"
                class="btn--share share-line"
                title="{{ 'general.social.line' | t }}">
                {% include 'icon-line' %}
              </a>
            </li>
            <li>
              <a target="_blank"
                href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}%3Fchannel=DTC_sharelink{% if member_id != blank %}%26promo_code={{ member_id }}{% endif %}"
                class="btn--share share-twitter"
                title="{{ 'general.social.twitter' | t }}">
                {% include 'icon-twitter' %}
              </a>
            </li>
          </ul>
        </div>
        {% if customer %}
          <div class="share-url">
            <div class="input">
              {% if member_id != blank %}
                <input type="text" id="share-url" class="form-control" value="{{ shop.url | append: share_permalink }}?channel=DTC_sharelink&promo_code={{ member_id }}">
              {% else %}
                <input type="text" id="share-url" class="form-control" value="{{ shop.url | append: share_permalink }}?channel=DTC_sharelink">
              {% endif %}
            </div>
            <a id="share-url-copy" class="share-url-copy" href="#" data-copy_input="#share-url"><span>{{ 'general.share_popup.copy_link' | t }}</span>
